{
  "name": "dexhive-scraper",
  "version": "1.0.0",
  "description": "Web scraper for DexHive table data with GUI",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "package": "electron-builder"
  },
  "keywords": ["scraper", "electron", "typescript"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "csv-writer": "^1.6.0",
    "puppeteer": "^23.10.4"
  },
  "build": {
    "appId": "com.dexhive.scraper",
    "productName": "DexHive Scraper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
